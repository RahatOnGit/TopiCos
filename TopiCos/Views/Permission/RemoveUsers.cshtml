@model List<RemoveUserFromRoomViewModel>

@if (ViewBag.hasData==false)
{
    <h4 class="text-center text-primary">No user to remove</h4>
}

else
{
<form method="post" asp-route-RoomId="@ViewBag.RoomId">

    <h4 class="text-center text-danger">Select the users for removing from the Room</h4>

    @for(int i=0;i<Model.Count;i++)
    {
        <input type="hidden" asp-for="@Model[i].UserId" />
        <input asp-for="@Model[i].IsSelected" class="form-check-input" />
        <label class="form-check-label" asp-for="@Model[i].IsSelected">
            @Model[i].Name 
        </label>
    }

    <input type="submit" value="Remove User"/>


</form>

}