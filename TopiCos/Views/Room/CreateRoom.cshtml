@model Room


<form method="post">
    
   
    <div class="col-lg-6 mt-2 m-auto">
        <div class="card">
            <div class="card-header bg-success">
                <h5 class="text-light text-center">Create a new room</h5>
                <hr />
            </div>
            <div class="card-body text-center">
                <div class="form-group">
                    <input asp-for="Name" placeholder="Name" class="form-control" />
                    <span class="text-danger" asp-validation-for="Name"></span>
                </div>
                <p class="text-danger"><i>@ViewBag.Mess</i></p>
                <div class="form-group mt-2">
                    <textarea asp-for="Description" placeholder="Description" class="form-control"></textarea>
                </div>

                <div class="form-group mt-2">
                    <input class="btn btn-light" type="submit" value="CREATE" />
                </div>

            </div>

        </div>

    </div>

</form>