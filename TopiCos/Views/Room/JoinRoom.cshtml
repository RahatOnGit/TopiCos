

<form method="post">
  
    

    <div class="col-lg-6 m-auto">
        <div class="card">
            <div class="card-header bg-success">
                <h5 class="text-light text-center">Join in a room</h5>
                <hr />
            </div>
            <div class="card-body text-center">
                <div class="form-group">
                    <input type="text" name="RoomId" class="form-control" required />
                    <span class="text-danger"><i> @ViewBag.Mess</i></span>

                </div>
                

                <div class="form-group mt-2">
                    <input class="btn btn-light" type="submit" value="Join" />
                </div>

            </div>

        </div>

    </div>
</form>